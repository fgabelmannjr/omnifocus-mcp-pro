{
  "name": "omnifocus-mcp-pro",
  "type": "module",
  "version": "1.2.3",
  "description": "Professional-grade MCP server for OmniFocus with 62 automation tools including Perspectives, Review system, TaskPaper, Forecast, Window/UI control, and advanced bulk operations",
  "main": "./dist/server.cjs",
  "module": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "exports": {
    ".": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    }
  },
  "bin": {
    "omnifocus-mcp-pro": "./cli.cjs"
  },
  "scripts": {
    "build": "tsup && chmod 755 dist/server.js",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "lint": "biome check ./src ./tests ./.claude",
    "lint:fix": "biome check --write ./src ./tests ./.claude",
    "format": "biome format --write ./src ./tests ./.claude",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest --config vitest.integration.config.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.25.1",
    "zod": "^4.2.1"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^24.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fgabelmannjr/omnifocus-mcp-pro.git"
  },
  "homepage": "https://github.com/fgabelmannjr/omnifocus-mcp-pro",
  "keywords": [
    "omnifocus",
    "mcp",
    "model-context-protocol",
    "claude",
    "task-management",
    "productivity",
    "gtd",
    "automation",
    "perspectives",
    "taskpaper",
    "review-system",
    "forecast",
    "professional",
    "power-tools",
    "ai"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
